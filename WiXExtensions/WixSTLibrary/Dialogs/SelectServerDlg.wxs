<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
	<Fragment>
    <!-- Здесь только описание диалога, здесь не должны быть подписки на события (кроме кнопки "Отмена"). -->
    <UI Id="UISelectServerDlg">
      <!-- Диалог выбора сервера. -->
      <Dialog Id="SelectServerDlg" Width="370" Height="270" Title="!(loc.SelectServerDlg_Title)">
        <!-- Баннер сверху и линии. -->
        <Control Id="BannerBitmap" Type="Bitmap" X="0" Y="0" Width="370" Height="44" TabSkip="no" Text="!(loc.SelectServerDlgBannerBitmap)" />
        <Control Id="BannerLine" Type="Line" X="0" Y="44" Width="370" Height="0" />
        <Control Id="BottomLine" Type="Line" X="0" Y="234" Width="370" Height="0" />

        <!-- Заголовок. -->
        <Control Id="Title" Type="Text" X="15" Y="6" Width="200" Height="15" Transparent="yes" NoPrefix="yes" Text="!(loc.SelectServerDlgTitle)" />
        <Control Id="Description" Type="Text" X="25" Y="23" Width="340" Height="15" Transparent="yes" NoPrefix="yes" Text="!(loc.SelectServerDlgDescription)" />

        <!-- Имя сервера. -->
        <Control Id="ServerText" Type="Text" X="25" Y="65" Width="340" Height="15" Transparent="yes" NoPrefix="yes" Text="!(loc.SelectServerDlgDatabaseText)" />
        <Control Id="ServerComboBox" Type="ComboBox" X="25" Y="80" Width="326" Height="16" TabSkip="no" Property="SELECTEDSERVER_LIST" Indirect="yes" ComboList="yes">
          <ComboBox Property="SELECTEDSERVER_LIST">
            <!-- Если не присвоить какое-нибудь значение, будет ошибка. -->
            <ListItem Value="..." />
          </ComboBox>
        </Control>     

        <!-- Кнопки перехода и отмены. -->
        <Control Id="Next" Type="PushButton" X="236" Y="243" Width="56" Height="17" Text="!(loc.WixUINext)" Default="yes" />
        <Control Id="Back" Type="PushButton" X="180" Y="243" Width="56" Height="17" Text="!(loc.WixUIBack)" />
        <Control Id="Cancel" Type="PushButton" X="304" Y="243" Width="56" Height="17" Cancel="yes" Text="!(loc.WixUICancel)" Disabled="yes">
          <Publish Event="SpawnDialog" Value="CancelDlg">1</Publish>
        </Control>
      </Dialog>

      <Property Id="SELECTEDSERVER_LIST" Value="SELECTEDSERVER" />
    </UI>
	</Fragment>
</Wix>